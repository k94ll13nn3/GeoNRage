<Container Condition="IsOpen">
    <div class="modal is-active">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title is-capitalized">@Args.Title</p>
                <button class="delete" aria-label="close" @onclick="HidePopup" type="button" disabled="@(DisableButtons || Args.ShowProgressBar)"></button>
            </header>
            <section class="modal-card-body">
                @Args.Message
                <Container Condition="@Args.ShowProgressBar">
                    <progress class="progress is-large is-info" max="100">60%</progress>
                </Container>
            </section>
            <footer class="modal-card-foot is-justify-content-flex-end">
                <Container Condition="Args.IsOkCancel">
                    <ChildContent>
                        <button class="button is-primary" @onclick="OnValidate" type="button" disabled="@(DisableButtons || Args.ShowProgressBar)">Valider</button>
                        <button class="button is-danger" @onclick="HidePopup" type="button" disabled="@(DisableButtons || Args.ShowProgressBar)">Annuler</button>
                    </ChildContent>
                    <ElseContent>
                        <button class="button is-primary" @onclick="HidePopup" type="button" disabled="@(DisableButtons || Args.ShowProgressBar)">Fermer</button>
                    </ElseContent>
                </Container>
            </footer>
        </div>
    </div>
</Container>
