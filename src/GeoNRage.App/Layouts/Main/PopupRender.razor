<Container Condition="IsOpen">
    <Container Condition="!Args.ShowProgressBar">
        <ChildContent>
            <div class="modal is-active">
                <div class="modal-background"></div>
                <div class="modal-card">
                    <header class="modal-card-head">
                        <p class="modal-card-title is-capitalized">@Args.Title</p>
                        <button class="delete" aria-label="close" @onclick="HidePopup" type="button" disabled="@(DisableButtons)"></button>
                    </header>
                    <section class="modal-card-body">
                        @Args.Message
                    </section>
                    <footer class="modal-card-foot is-justify-content-flex-end">
                        <div class="buttons">
                            <Container Condition="Args.IsOkCancel">
                                <ChildContent>
                                    <button class="button is-primary" @onclick="OnValidate" type="button" disabled="@(DisableButtons)">Valider</button>
                                    <button class="button is-danger" @onclick="HidePopup" type="button" disabled="@(DisableButtons)">Annuler</button>
                                </ChildContent>
                                <ElseContent>
                                    <button class="button is-primary" @onclick="HidePopup" type="button" disabled="@(DisableButtons)">Fermer</button>
                                </ElseContent>
                            </Container>
                        </div>
                    </footer>
                </div>
            </div>
        </ChildContent>
        <ElseContent>
            <div class="modal is-active">
                <div class="modal-background"></div>
                <div class="modal-content">
                    <div class="box">
                        <LoadingAnimation BigIcon="true" Animated="true">
                            Chargement...
                        </LoadingAnimation>
                    </div>
                </div>
            </div>
        </ElseContent>
    </Container>
</Container>
