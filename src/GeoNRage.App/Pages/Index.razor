@page "/"

<Container Condition="IsConnected && Games?.Any() == true">
    <ul>
        <Repeater Items="Games">
            <ItemTemplate Context="game">
                <li><a href="/@game.Id">#@game.Id — @game.Name</a></li>
            </ItemTemplate>
        </Repeater>
    </ul>
</Container>

<Container Condition="!IsConnected || Games?.Any() != true">
    <LoadingScreen />
</Container>
