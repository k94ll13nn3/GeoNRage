
<div class="dialog-box">
    <EditForm Model="_map" OnValidSubmit="UpdateMapAsync" @ref="_form">
        <div class="dialog-title py-1">
            <span class="has-text-weight-semibold is-size-4 m-4">Edition de carte</span>
        </div>

        <div class="m-4">

            <DataAnnotationsValidator />

            <Container Condition="!string.IsNullOrWhiteSpace(_error)">
                <div class="notification is-danger">
                    @_error
                </div>
            </Container>

            <div class="field">
                <label class="label">Nom</label>
                <div class="control">
                    <InputText @bind-Value="_map.Name" placeholder="Nom" class="input" />
                    <p class="help is-danger">
                        <ValidationMessage For="@(() => _map.Name)"></ValidationMessage>
                    </p>
                </div>
            </div>

            <div class="field">
                <label class="checkbox">
                    <InputCheckbox @bind-Value="_map.IsMapForGame" class="checkbox" />
                    Carte pour partie
                </label>
            </div>
        </div>

        <div class="buttons two-buttons has-addons is-flex">
            <button class="button is-success is-radiusless" type="submit">Valider</button>
            <button class="button is-danger is-radiusless" @onclick="Cancel" type="button">Annuler</button>
        </div>
    </EditForm>
</div>

