@page "/statistics"

<table>
    <thead>
        <tr>
            <th>Joueur</th>
            <th>Nombre de 5000</th>
            <th>Nombre de 4999 😏</th>
        </tr>
    </thead>
    <tbody>
        <Repeater Items="Players" Context="player">
            <tr>
                <th>@player.Name</th>
                <td>@GetScores(player.Id).Count(s => s == 5000)</td>
                <td>@GetScores(player.Id).Count(s => s == 4999)</td>
            </tr>
        </Repeater>
    </tbody>
</table>
