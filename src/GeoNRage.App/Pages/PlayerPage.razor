@page "/players/{Id}"

<Container Condition="Loaded && PlayerFound">
    <ChildContent>
        <div class="container">
            <div class="m-3">
                <section class="hero is-primary is-small">
                    <div class="hero-body">
                        <p class="title">
                            @Player.Name
                        </p>
                        <p class="subtitle">
                            <a href="https://www.geoguessr.com/user/@Player.Id" target="_blank">
                                <span class="icon is-small">
                                    <i class="fas fa-map-marker-alt"></i>
                                </span>
                                <span>Profil GeoGuessr</span>
                            </a>
                        </p>
                    </div>
                </section>
            </div>

            <div class="notification is-warning m-3">
                Seules les cartes des parties et les cartes principales des challenges sont comptées pour les statistiques.
            </div>

            <h1 class="is-size-4 my-3 mx-6">Statistiques générales</h1>
            <nav class="level mx-3 my-5">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Nombre de 5000</p>
                        <p class="title">@FilteredScores.SelectMany(p => p.PlayerGuesses).Count(g => g.Score == 5000)</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Nombre de 4999</p>
                        <p class="title">@FilteredScores.SelectMany(p => p.PlayerGuesses).Count(g => g.Score == 4999)</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Nombre de carte complétées</p>
                        <p class="title">@FilteredScores.Count(p => p.Done)</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Meilleure partie (<span title="Seules les parties avec 3 cartes sont comptées" style="cursor:help">?</span>)</p>
                        <p class="title">
                            @{
                                List<PlayerScoreWithChallengeDto>? results = Player.PlayerScores.Where(p => (p.ChallengeTimeLimit ?? 300) == 300).GroupBy(p => p.GameId).Where(g => g.Count() == 3).OrderByDescending(g => g.OrderBy(c => c.ChallengeId).Select(p => p.Sum).Sum()).FirstOrDefault()?.OrderBy(c => c.ChallengeId).ToList();
                            }
                            <Container Condition="results is not null">
                                <ChildContent>
                                    @results!.Select(p => p.Sum).Sum()
                                </ChildContent>
                                <ElseContent>
                                    —
                                </ElseContent>
                            </Container>
                        </p>
                    </div>
                </div>
            </nav>

            <h1 class="is-size-4 my-3 mx-6">Meilleur score par carte</h1>
            <nav class="level mx-3 my-5">
                <Repeater Items="Maps.Where(m => m.IsMapForGame)" Context="map">
                    @{
                        PlayerScoreWithChallengeDto? score = Player.PlayerScores.Where(c => c.MapId == map.Id).OrderByDescending(p => p.Sum).FirstOrDefault();
                    }
                    <div class="level-item has-text-centered">
                        <div>
                            <p class="heading">@map.Name</p>
                            <p class="title">
                                <Container Condition="score?.Sum is not null">
                                    @score!.Sum
                                </Container>
                                <Container Condition="score?.Sum is null">
                                    —
                                </Container>
                            </p>
                        </div>
                    </div>
                </Repeater>
            </nav>

            <h1 class="is-size-4 my-3 mx-6">Statistiques diverses</h1>
            <nav class="level mx-3 my-5">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Nombre de 25k</p>
                        <p class="title">@FilteredScores.Count(p => p.Sum == 25000)</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Moyenne par carte</p>
                        <p class="title">@((int)(FilteredScores.Where(p => p.Sum is not null).Average(p => p.Sum) ?? 0))</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Moyenne par round</p>
                        <p class="title">@((int)(FilteredScores.SelectMany(p => p.PlayerGuesses).Where(g => g.Score is not null).Select(g => g.Score).Average() ?? 0))</p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Nombre de 0</p>
                        <p class="title">@FilteredScores.SelectMany(p => p.PlayerGuesses).Count(g => g.Score == 0)</p>
                    </div>
                </div>
            </nav>

            <div class="columns m-3">
                <div class="column">
                    <Container Condition="ChallengesNotDone?.Any() == true">
                        <ChildContent>
                            <div class="card">
                                <header class="card-header">
                                    <p class="card-header-title">
                                        Cartes non jouées
                                    </p>
                                    <div class="card-header-icon">
                                        <a @onclick="ShowAllMapToggle" title="@(!ShowAllMaps ? "Afficher toutes les cartes" : "Afficher les cartes principales")">
                                            <Container Condition="ShowAllMaps">
                                                <ChildContent>
                                                    <span class="icon is-small">
                                                        <i class="fas fa-minus"></i>
                                                    </span>
                                                </ChildContent>
                                                <ElseContent>
                                                    <span class="icon is-small">
                                                        <i class="fas fa-plus"></i>
                                                    </span>
                                                </ElseContent>
                                            </Container>
                                        </a>
                                    </div>
                                </header>
                                <div class="card-table">
                                    <div class="content">
                                        <table class="table table is-striped is-hoverable is-fullwidth">
                                            <tbody>
                                                <Repeater Items="ChallengesNotDone!.Where(c => ShowAllMaps || MapsForGame.Contains(c.MapId))" Context="challenge">
                                                    <tr>
                                                        <td>@challenge.MapName</td>
                                                        <td>
                                                            <Container Condition="challenge.GameId is not null">
                                                                <ChildContent>
                                                                    <a href="@NavigationManager.ToAbsoluteUri($"/games/{challenge.GameId}")">
                                                                        #@challenge.GameId
                                                                    </a>
                                                                </ChildContent>
                                                                <ElseContent>
                                                                    <a href="@NavigationManager.ToAbsoluteUri($"/challenges/{challenge.Id}")">
                                                                        #@challenge.Id (C)
                                                                    </a>
                                                                </ElseContent>
                                                            </Container>
                                                        </td>
                                                    </tr>
                                                </Repeater>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </ChildContent>
                        <ElseContent>
                            <div class="card">
                                <header class="card-header">
                                    <p class="card-header-title">
                                        Cartes non jouées
                                    </p>
                                </header>
                                <div class="no-challenges is-flex is-align-content-center is-align-items-center is-justify-content-center">
                                    Toutes les cartes disponibles ont été jouées !
                                </div>
                            </div>
                        </ElseContent>
                    </Container>
                </div>

                <div class="column">
                    <Container Condition="GameHistoric?.Any() == true">
                        <ChildContent>
                            <div class="card">
                                <header class="card-header">
                                    <p class="card-header-title">
                                        Historique des parties (<span class="help-tooltip" title="Seules les parties avec 3 cartes sont comptées, survoler les barres pour voir le score">?</span>)
                                    </p>
                                </header>
                                <div class="card-content py-0">
                                    <div class="container is-flex is-justify-content-center is-align-items-center m-0" style="max-height:250px;height:250px;">
                                        <table class="charts-css column show-labels show-primary-axis show-data-axes show-5-secondary-axes">
                                            <caption>
                                                Historique des parties
                                            </caption>
                                            <thead>
                                                <tr>
                                                    <th scope="col">Partie</th>
                                                    <th scope="col">Score</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <Repeater Items="GameHistoric" Context="game">
                                                    <tr>
                                                        <th scope="row"></th>
                                                        <td style="--size: calc(@game.score / 75000);">
                                                            <span class="data"></span>
                                                            <span class="tooltip">Partie #@game.id<br />Score @game.score</span>
                                                        </td>
                                                    </tr>
                                                </Repeater>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </ChildContent>
                        <ElseContent>
                            <div class="card">
                                <header class="card-header">
                                    <p class="card-header-title">
                                        Historique des parties
                                    </p>
                                </header>
                                <div class="no-challenges is-flex is-align-content-center is-align-items-center is-justify-content-center">
                                    Aucune partie jouées
                                </div>
                            </div>
                        </ElseContent>
                    </Container>
                </div>
            </div>

            <div class="columns m-3">
                <div class="column">
                    <Container Condition="Player?.PlayerScores?.Any() == true">
                        <ChildContent>
                            <div class="card">
                                <header class="card-header">
                                    <p class="card-header-title">
                                        Cartes jouées
                                    </p>
                                </header>
                                <div class="card-table">
                                    <div class="content">
                                        <table class="table table is-striped is-hoverable is-fullwidth">
                                            <tbody>
                                                <Repeater Items="Player!.PlayerScores" Context="score">
                                                    <tr>
                                                        <td>@score.MapName</td>
                                                        <td>
                                                            <Container Condition="score.GameId != -1">
                                                                <ChildContent>
                                                                    <a href="@NavigationManager.ToAbsoluteUri($"/games/{score.GameId}")">
                                                                        #@score.GameId
                                                                    </a>
                                                                </ChildContent>
                                                                <ElseContent>
                                                                    <a href="@NavigationManager.ToAbsoluteUri($"/challenges/{score.ChallengeId}")">
                                                                        #@score.ChallengeId (C)
                                                                    </a>
                                                                </ElseContent>
                                                            </Container>
                                                        </td>
                                                        <td>@score.Sum</td>
                                                    </tr>
                                                </Repeater>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </ChildContent>
                        <ElseContent>
                            <div class="card">
                                <header class="card-header">
                                    <p class="card-header-title">
                                        Cartes jouées
                                    </p>
                                </header>
                                <div class="no-challenges is-flex is-align-content-center is-align-items-center is-justify-content-center">
                                    Aucune carte jouée.
                                </div>
                            </div>
                        </ElseContent>
                    </Container>
                </div>

                <div class="column">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                Meilleur score et moyenne par carte
                            </p>
                        </header>
                        <div class="card-table">
                            <div class="content">
                                <table class="table table is-striped is-hoverable is-fullwidth">
                                    <tbody>
                                        <Repeater Items="Maps.OrderByDescending(m => m.IsMapForGame)" Context="map">
                                            @{
                                                IEnumerable<PlayerScoreWithChallengeDto> scores = Player!.PlayerScores!.Where(c => c.MapId == map.Id).OrderByDescending(p => p.Sum);
                                            }
                                            <tr>
                                                <td>@map.Name</td>
                                                <Container Condition="scores.Any()">
                                                    <ChildContent>
                                                        <td>@scores.First().Sum</td>
                                                        <td>@((int?)scores.Average(s => s.Sum))</td>
                                                    </ChildContent>
                                                    <ElseContent>
                                                        <td>—</td>
                                                        <td>—</td>
                                                    </ElseContent>
                                                </Container>
                                            </tr>
                                        </Repeater>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </ChildContent>

    <ElseContent>
        <Container Condition="!Loaded && PlayerFound">
            <LoadingAnimation>
                Chargement du joueur @(Id)...
            </LoadingAnimation>
        </Container>

        <Container Condition="!PlayerFound">
            <PageNotFound />
        </Container>
    </ElseContent>
</Container>
