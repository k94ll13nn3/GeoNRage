is_global = true

dotnet_diagnostic.CA1014.severity = none

# See https://github.com/dotnet/roslyn/issues/47832
dotnet_diagnostic.IDE0058.severity = none

# CA2007/RCS1090: Call ConfigureAwait
dotnet_diagnostic.CA2007.severity = none
dotnet_diagnostic.RCS1090.severity = none

# S1075: Refactor your code not to use hardcoded absolute paths or URIs
dotnet_diagnostic.S1075.severity = none

# CA1716: Identifiers should not match keywords
dotnet_diagnostic.CA1716.severity = none

# RS0030: Do not use banned APIs
dotnet_diagnostic.RS0030.severity = error

# S1172 : Remove this parameter XXXX, whose value is ignored in the method, FP for delegates
dotnet_diagnostic.S1172.severity = silent

# IDE0161 : Use file scoped namespace
dotnet_diagnostic.IDE0161.severity = warning

# RCS1173: Use coalesce instead of if
dotnet_diagnostic.RCS1173.severity = silent

# Add missing cases to switch expression 
dotnet_diagnostic.IDE0072.severity = none

roslynator_accessibility_modifiers = explicit
roslynator_enum_has_flag_style = method
roslynator_object_creation_type_style = implicit_when_type_is_obvious
roslynator_use_var_instead_of_implicit_object_creation = true
